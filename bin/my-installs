#!/bin/bash

if [[ $UID != 0 ]] ; then
    echo Error! Run me as root.
    exit 1
fi


update-locale LC_TIME=en_US.UTF-8


read -p "Install virtualization packages? " -n 1 -r
if [[ $REPLY =~ ^[Yy]$ ]]
then
	apt-get install -y qemu-kvm libvirt-bin virtinst bridge-utils cpu-checker
fi


#plocate is MUCH faster than mlocate
read -p "Install plocate? " -n 1 -r
if [[ $REPLY =~ ^[Yy]$ ]]
then
	sudo apt install -y libzstd-dev meson
	wget https://plocate.sesse.net/download/plocate-1.1.17.tar.gz
	tar xf plocate-1.1.17.tar.gz
	cd plocate-1.1.17/
	meson obj
	cd obj
	ninja
	sudo groupadd --system plocate
	sudo ninja install
	sudo systemctl enable plocate-updatedb.timer
	sudo updatedb
fi

apt-get install -y build-essential terminator mc meld vim git wireshark tree sshfs htop gnome-disk-utility \
       ethtool gparted tmux openssh-server gdb net-tools bridge-utils


