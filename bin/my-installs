#!/bin/bash

if [[ $UID != 0 ]] ; then
    echo Error! Run me as root.
    exit 1
fi


update-locale LC_TIME=en_US.UTF-8


read -p "Install virtualization packages? " -n 1 -r
if [[ $REPLY =~ ^[Yy]$ ]]
then
	apt-get install -y qemu-kvm libvirt-bin virtinst bridge-utils cpu-checker
fi


apt-get install -y build-essential gdb terminator mc meld vim git wireshark tree sshfs htop gnome-disk-utility \
       ethtool gparted tmux openssh-server
